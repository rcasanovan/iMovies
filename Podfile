source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '9.0'
#use_frameworks!
inhibit_all_warnings!

#link_with 'iMovies', 'iMoviesTests'


def iMoviesPods
    #Images
    pod 'Haneke', '~> 1.0'
    
    #networking
    pod 'FXReachability', '~> 1.3.2'
end

target 'iMovies' do
    iMoviesPods
end

target 'iMoviesTests' do
    iMoviesPods
end
